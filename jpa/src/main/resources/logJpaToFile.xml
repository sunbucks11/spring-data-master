<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="jpalogfile"
              class="ch.qos.logback.core.FileAppender">
        <file>${user.dir}/jpaApp.log</file>
        <encoder>
            <pattern>%.-1level|%-30.30logger{0}|%msg%n</pattern>
        </encoder>
        <append>false</append>
    </appender>

    <logger name="org.springframework.data" additivity="false" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.springframework.orm" additivity="false" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.springframework.jdbc" additivity="false" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.springframework.transaction" additivity="false" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>

    <logger name="net.sf.ehcache" additivity="false" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate" level="warn">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.cfg" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.ejb" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.sql" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.cache" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.type" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
    <logger name="org.hibernate.tool.hbm2ddl" additivity="false" level="debug">
        <appender-ref ref="jpalogfile"/>
    </logger>
</included>